<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidtitan.spotscore.main.play.ui.SaveScoreFragDialog"
    android:theme="@style/DialogStyle">

    <TextView
        android:id="@+id/saveScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/fab_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/saveScore_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fab_margin"
        android:layout_below="@+id/saveScoreTextView"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/saveScoreEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/note"
            android:imeOptions="actionNext"
            android:singleLine="false"/>

    </android.support.design.widget.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saveScore_layout"
        android:paddingTop="@dimen/fab_margin"
        android:paddingStart="@dimen/fab_margin"
        android:paddingEnd="@dimen/fab_margin">

        <TextView
            android:id="@+id/sendSaveTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="@dimen/fab_margin"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cancelTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sendSaveTextView"
            android:gravity="center_horizontal"
            android:padding="@dimen/fab_margin"
            android:text="@string/cancel"
            android:textColor="@color/colorSecondaryText" />



    </RelativeLayout>

</RelativeLayout>
