<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/placeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_margin_half"
    android:layout_marginStart="@dimen/card_margin_half"
    android:layout_marginTop="@dimen/card_margin_half"
    android:background="@drawable/ripple"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/scoreOptionImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/scoreOptionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/scoreOptionImageView"
            android:paddingLeft="16dp"
            android:padding="8dp"
            android:text="@string/placeholder"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreOptionsDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/scoreOptionsTextView"
            android:layout_toEndOf="@+id/scoreOptionImageView"
            android:gravity="center" />

    </RelativeLayout>

</android.support.v7.widget.CardView>