<?xml version="1.0" encoding="utf-8"?>
<com.androidtitan.hotspots.JavaCustoms.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/venue_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView android:id="@+id/locationNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="16dp"
                android:gravity="center"
                android:textSize="@dimen/abc_text_size_medium_material"/>

            <TextView android:id="@+id/scoreText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationNameText"
                android:layout_above="@+id/foursquareBtn"
                android:gravity="center"
                android:textSize="75dp"
                android:textStyle="bold"/>

            <ImageButton android:id="@+id/foursquareBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCFFFFFF"
                android:layout_alignParentBottom="true"
                android:padding="16dp"
                android:src="@drawable/foursquare_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ListView android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</com.androidtitan.hotspots.JavaCustoms.SlidingRelativeLayout>